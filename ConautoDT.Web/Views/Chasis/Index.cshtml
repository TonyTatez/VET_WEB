                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.vin)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.tamanio)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.placaAntigua)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.descipcionMarca)
                                        </td>
                                        <td hidden>
                                            @Html.DisplayFor(model => item.idMarcaChasis)
                                        </td>

