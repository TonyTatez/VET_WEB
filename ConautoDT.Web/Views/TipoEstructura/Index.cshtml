    ViewData["Title"] = "Tipo de Estructuras";
}





<!-- Modal Guardar-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content " style="width:100%">
            <div class="modal-header TMSHeaderModal">
                <h5 class="modal-title TMSTituloModal">Tipos de Estructuras</h5>
                <div class="d-flex align-items-end flex-column">
                    <button type="button" class="justify-content-end rounded-circle" data-bs-dismiss="modal" aria-label="Cerrar">X</button>
                </div>
            </div>
            <form asp-action="GuardaryEditarInfoTipoEstructura">

                <div class="modal-body ">
                    <div class="form-outline mb-4 hidden" hidden>
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText" for="ruc">Descripción</label>
                        <input type="text" asp-for="@Model.descripcion" class="form-control form-control-lg  TMSTextBoxValores"
                               placeholder="Ingrese la Descripción" required />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText" for="ruc">Número de llantas</label>
                        <input id="descripcion2" type="number" asp-for="@Model.NumeroLlantas" class="form-control form-control-lg  TMSTextBoxValores" min="1" max="9999" step="1" value="" placeholder="Número de llanta" autocomplete="off" required />

                    </div>


                    <div class="form-outline mb-4">

                        <div class="form-group">
                            <label class="form-label btn-color-info TMSlabelText" for="ruc">Imagen de estructura de llanta</label>
                            <div class="col-md-10">
                                <input type="text" id="urlIma" asp-for="@Model.UrlImagen" hidden />
                                <input type="file" name="RutaFoto" class="form-control input-sm" id="RutaFoto" accept=".jpg, .jpeg, .png" required onchange="mostrarRutaArchivo()" />

                            </div>
                        </div>

                    </div>


                    <div class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText" asp-for="@Model.Delanteras" for="ruc">Delanteras</label>
                        <input type="text" asp-for="@Model.Delanteras" class="form-control form-control-lg  TMSTextBoxValores"
                               placeholder="llantas delanteras" required />
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText" asp-for="@Model.Posteriores" for="ruc">Posteriores</label>
                        <input type="text" asp-for="@Model.Posteriores" class="form-control form-control-lg  TMSTextBoxValores"
                               placeholder="llantas posteriores" required />
                    </div>


                </div>
                <div class="modal-footer">
                    <button id="guardarInformacion" type="submit" class="bi bi-save btn btn-primary  btn-sm"> Guardar </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content " style="width:100%">
            <div class="modal-header TMSHeaderModal">
                <h5 class="modal-title TMSTituloModal">Tipo</h5>
                <div class="d-flex align-items-end flex-column">
                    <button type="button" class="justify-content-end rounded-circle" data-bs-dismiss="modal" aria-label="Cerrar">X</button>
                </div>
            </div>
            <form asp-action="GuardaryEditarInfoTipoEstructura">

                <div class="modal-body ">
                    <div class="form-outline mb-4 hidden" hidden>

                        <input type="text" asp-for="@Model.IdTipoEstructura" id="idId" class="form-control form-control-lg  TMSTextBoxValores" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText" for="ruc">Descripción</label>
                        <input type="text" asp-for="@Model.descripcion" id="descipcionId" class="form-control form-control-lg  TMSTextBoxValores"
                               placeholder="Ingrese la Descripción" required />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText" for="ruc">Número de llantas</label>
                        <input id="numerollantaId" type="number" asp-for="@Model.NumeroLlantas" class="form-control form-control-lg  TMSTextBoxValores" min="1" max="9999" step="1" value="" placeholder="Número de llanta" autocomplete="off" required />

                    </div>


                    <div class="form-outline mb-4">

                        <div class="form-group">
                            <label class="form-label btn-color-info TMSlabelText" for="ruc">Imagen de estructura de llanta</label>
                            <div class="col-md-10">
                                <input type="text" id="urlImaIds" asp-for="@Model.UrlImagen" hidden />
                                <input type="file" name="RutaFotos" class="form-control input-sm" id="RutaFotoIds" accept=".jpg, .jpeg, .png" required onchange="mostrarRutaArchivoEditar()" />

                            </div>
                        </div>

                    </div>


                    <div class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText" asp-for="@Model.Delanteras" for="ruc">Delanteras</label>
                        <input type="text" id="delanteraId" asp-for="@Model.Delanteras" class="form-control form-control-lg  TMSTextBoxValores"
                               placeholder="llantas delanteras" required />
                    </div>

                    <div class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText" asp-for="@Model.Posteriores" for="ruc">Posteriores</label>
                        <input type="text" id="posterioresId" asp-for="@Model.Posteriores" class="form-control form-control-lg  TMSTextBoxValores"
                               placeholder="llantas posteriores" required />
                    </div>


                </div>
                <div class="modal-footer">
                    <button id="guardarInformacion" type="submit" class="bi bi-save btn btn-primary  btn-sm"> Editar </button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal Ver Imagen -->
<div class="modal fade" id="editarModalImagen" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:80%">
        <div class="modal-content " style="width:100%">
            <div class="modal-header TMSHeaderModal">
                <h5 class="modal-title TMSTituloModal">Tipo Estructura Imagen</h5>
                <div class="d-flex align-items-end flex-column">
                    <button type="button" class="justify-content-end rounded-circle" data-bs-dismiss="modal" aria-label="Cerrar">X</button>
                </div>
            </div>

            <div>

                <img id="idImagenVer" style="width:500px ; height:500px" />


            </div>

        </div>
    </div>
</div>



<!-- Modal Eliminar -->
<div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content " style="width:100%">
            <div class="modal-header TMSHeaderModal">
                <h5 class="modal-title TMSTituloModal">TMS Mantenimiento</h5>
                <div class="d-flex align-items-end flex-column">
                    <button type="button" class="justify-content-end  cross" data-bs-dismiss="modal" aria-label="Cerrar">X</button>
                </div>
            </div>
            <form asp-action="DeleteInformacionTipoEstructura">


                <div class="modal-body ">
                    <div hidden class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText">Id</label>
                        <input type="text" asp-for="@Model.idTipoEstructura" id="idCatalogoEliminar" class="form-control form-control-lg  TMSTextBoxValores" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label btn-color-info TMSlabelText" style="margin-top:28px; font-size:13px">¿Está seguro de querer eliminar esta catalogo?</label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button id="eliminarInfoData" style="padding:10px; width:50px;" type="submit" class=" btn btn-success  btn-sm">Sí </button>
                    <button id="eliminarInfoDatos" style="padding:10px; width:50px;" data-bs-dismiss="modal" aria-label="Cerrar" type="button" class=" btn btn-danger  btn-sm">No </button>
                </div>
            </form>
        </div>
    </div>
</div>

