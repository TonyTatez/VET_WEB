                                <th>Delanteras</th>
                                <th>Posteriores</th>

                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ItemTipoEstructura != null)
                            {

                                @foreach (var item in Model.ItemTipoEstructura)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(model => item.idTipoEstructura)
                                        </td>
                                        @*  <td>
                                @Html.DisplayFor(model => item.tipoTipo)
                                </td>*@
                                        <td>
                                            @Html.DisplayFor(model => item.descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.numeroLlantas)
                                        </td>
                                        <td>

                                            <button title="Ver Imagen" class="btn p-v-sm btn-success btn-sm" id="btnEditar" data-bs-toggle="modal" data-bs-target="#editarModalImagen" onclick="verImagen({imagen:'@item.urlImagen'});">
                                                <i class="bi bi-box-arrow-in-down"></i>
                                            </button>
                                            @* <a href="@item.urlImagen" style="background-color:aliceblue  ; color:black ; font-size:15px">Imagen</a>
                                    *@
                                            @*    @Html.DisplayFor(model => item.urlImagen)*@
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.delanteras)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => item.posteriores)
                                        </td>

                                        <td>
                                            <button title="Editar Tipo" class="btn p-v-sm btn-success btn-sm" id="btnEditars" data-bs-toggle="modal" data-bs-target="#editarModal" onclick="editar({idCatalogo:@item.idTipoEstructura , numero:@item.numeroLlantas ,    delanteras:'@item.delanteras' , posteriores:'@item.posteriores' ,descripcion:'@item.descripcion' , url:'@item.urlImagen'});">
                                                <i class="bi bi-pen"></i>
                                            </button>

                                            <button title="Eliminar Tipo" class="btn p-v-sm btn-danger btn-sm" id="btnEliminar" data-bs-toggle="modal" data-bs-target="#eliminarModal" onclick="eliminarCatalogo({idCatalogo:@item.idTipoEstructura});">
                                                <i class="bi bi-trash"></i>
                                            </button>

                                        </td>
                                    </tr>
                                }

                            }
                            else
                            {
                                <tr>
                                    <td>-</td>
